{# boutique/boutique.html.twig #}
{% extends "base.html.twig" %}

{% block title %}
    Boutique
{% endblock %}

{% block content %}
    <div class="row">
        <div class="alert alert-dark col-md-12">
            <h1><i class="fas fa-store"></i> Boutique / {{ categories|length }} rayons</h1>
        </div>
    </div>
    <div class="row">
        {% for item in categories %}
            <div class="col-md-4">
                <div class="card clickable" onclick="window.location.href='{{ path('rayon_page', { 'idCategorie': item.id })}}'">
                    <img class="card-img-top" src="{{ asset(item.visuel) }}" alt="{{ item.libelle }}">
                    <div class="card-body">
                        <h4 class="card-title"> Rayon {{ item.libelle }} </h4>
                        <p class="card-text"><i> {{ item.texte }}</i></p>
                    </div>
                </div>    
            </div>
        {% endfor %}
    </div>
{% endblock %}